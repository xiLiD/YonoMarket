/* 遮罩 */
.zzc {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.6;
  left: 0;
  top: 0;
  z-index : 1500;
}
.tank {
  width: 700rpx;
  height: 840rpx;
  background-color: #fff;
  position: fixed;
  left: 25rpx;
  bottom: 25rpx;
  z-index: 997;
  border-radius: 8rpx;
  transition: .2s linear;
  transform: translateY(300rpx);
  opacity: 0;

}
.tank_active {
  opacity: 1;
  transform: translateY(0rpx);
  z-index : 2000;
}

