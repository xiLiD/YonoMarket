.header{
  margin: 60rpx 26rpx 0;
  border-bottom: 1px solid #AAAAAA;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 26rpx;
}
.left {
  width: 400rpx;
}
.name{
  font-size: 26rpx;
  color: #222222;
  font-weight: bold;
}
.tel{
  font-size: 24rpx;
  color: #555555;
  margin: 10rpx 0;
}
.dizhi{
  font-size: 24rpx;
  color: #555555;
  text-align: justify;
}
.right{
  font-size : 20rpx;
  color : #999;
}
.right image{
  width: 100%;
  height: 100%;
  display: block;
}
.noMore{
  font-size: 24rpx;
  color: #AAAAAA;
  text-align: center;
}
.shopImg {
  width: 170rpx;
  height : 170rpx;
  border-radius: 10px;
  overflow: hidden
}
.shopImg image {
  width: 100%;
  height :100%;
  object-fit: cover;
  object-position: center center;
}