.serch {
  width: 700rpx;
  height: 74rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
  background-color: #f4f4f4;
  border-radius: 4rpx;
  margin-top: 25rpx;
}

.serch input {
  height: 74rpx;
  width: 610rpx;
  font-size: 26rpx;
  margin-left: 17rpx;
}

.serch_img {
  width: 50rpx;
  height: 50rpx;
  margin-left: 8rpx;
}

.serch_img image {
  width: 100%;
  height: 100%;
  display: block;
}

/*团队列表*/
.team_box {
  width: 700rpx;
  margin: 0 auto;
  padding-bottom : 30rpx;
  border-bottom : 2rpx solid #ddd;
}
.team_list {
  display: flex;
  margin-top:30rpx;
  /* padding : 0 30rpx; */
}
.team_left {
  /* flex: 2; */
  width: 250rpx;
  height :250rpx;
  /* width: 200rpx;
  height : 200rpx; */
  border-radius: 10rpx;
  overflow: hidden;
}
.team_left image {
  width: 100%;
  height : 100%;
  object-fit: cover;
  object-position: center center;
}
.team_right {
  margin-left: 20rpx;
  font-size : 34rpx;
  /* flex: 3; */
  width: 400rpx;
  color: #333;
  letter-spacing: 2rpx;
  /* width: 300rpx; */
}
.team_box .team_title {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.team_right .team_details {
  margin-top:15rpx;
  text-align: justify;
  font-size : 28rpx;
  color : #999;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

/* 优秀作品 */
.team_g_list_box {
  display: flex;
  justify-content: space-between;
  margin-top : 20rpx;
}
.team_g_list {
  font-size:34rpx;
}
.team_box_title {
  margin-top: 20rpx;
  font-size : 34rpx;
}
.team_g_name {
  margin:10rpx 0;
}
.team_g_top {
  width: 340rpx;
  height : 340rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.team_g_top image {
  width: 100%;
  height :100%;
  object-fit: cover;
  object-position: center center;
}
.team_g_price .discount {
  color : #cc333b;
}
.team_g_price .initial {
  display: inline-block;
  color : #999;
  transform: scale(0.8);
  transform-origin: center center;
}